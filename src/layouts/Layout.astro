---
import '@fontsource/zen-kaku-gothic-new/500.css';
import '@fontsource/zen-kaku-gothic-new/700.css';
import '@fontsource/barlow-condensed/600.css';
import '@fontsource/barlow-semi-condensed/600.css';

import MetaData from '@components/MetaData.astro';
import Header from '@components/Header.svelte';
import PageLinks from '@components/PageLinks.svelte';
import Footer from '@components/Footer.svelte';

type Props = {
  title?: string;
  description?: string;
  currentPage: string;
};

const { title, currentPage, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja" class="font-zen font-medium">
  <head>
    <MetaData pageTitle={title} pageDescription={description} />
  </head>

  <body class="bg-bg-surface-primary text-text-primary">
    <div
      class="grid min-h-screen grid-cols-layout-md grid-rows-layout-md gap-x-6 md:grid-cols-layout-lg md:grid-rows-layout-lg"
    >
      <div class="sticky top-0 z-10 col-span-3 col-start-1 md:col-span-9">
        <Header currentPage={currentPage} client:visible />
      </div>

      <aside
        class="sticky top-[130px] my-16 hidden h-60 md:col-span-1 md:col-start-2 md:block"
      >
        <PageLinks currentPage={currentPage} />
      </aside>

      <main
        class="col-span-1 col-start-2 my-12 md:col-span-6 md:col-start-3 md:my-16"
      >
        <slot />
      </main>

      <div class="col-span-3 col-start-1 mt-10 md:col-span-9">
        <Footer />
      </div>
    </div>
    <style is:global></style>
  </body>
</html>
